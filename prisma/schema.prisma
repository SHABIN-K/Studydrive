generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  email       String    @unique
  name        String?
  password    String
  phoneNumber String
  subjects    subject[]
  userRole    Role      @default(USER)
}

model subject {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  User         User?   @relation(fields: [userId], references: [id])
  userId       String? @db.ObjectId
  course_name  String
  semester     String
  subject_code String
  subject_name String
}

enum Role {
  USER
  ADMIN
}
