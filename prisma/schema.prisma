generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  email       String  @unique
  name        String?
  password    String
  phoneNumber String
  userRole    Role    @default(USER)
}

enum Role {
  USER
  ADMIN
}
